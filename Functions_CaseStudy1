
function greetingGenerator(department, company) {
  return function(firstName, lastName, timeOfDay) {
    console.log(`Good ${timeOfDay}, ${firstName} ${lastName}! Welcome to the ${department} department at ${company}`);
  };
}

const marketingGreeting = greetingGenerator("Marketing", "TechCorp");

marketingGreeting("Alice", "Johnson", "morning");
marketingGreeting("Bob", "Smith", "afternoon");
marketingGreeting("Charlie", "Brown", "evening");
