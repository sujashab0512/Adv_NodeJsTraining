// Scenario 1: Boolean Logic for Checkout System
let hasItems = true;      // Cart has items
let isLoggedIn = true;    // User is logged in
let paymentValid = true; // Payment validation success

if (hasItems && isLoggedIn && paymentValid) {
  console.log("Checkout successful!");
} else {
  console.log("Checkout failed. Please check cart, login, or payment.");
}


// Scenario 2: Billing System Discount Calculation
let price = 140.75;
let quantity = 8;

if (Number.isInteger(quantity)) {
    let total = price * quantity;

  if (total > 500) {
    total = total - (total * 0.10);
  }

  let finalAmount = total.toFixed(2);
  console.log(`Final Amount: â‚¹${finalAmount}`);
} else {
  console.log("Quantity must be an integer.");
}

